---
layout: base.njk
pagination:
  data: days
  size: 1
  alias: item
permalink: "{{ item.permalink }}/"
eleventyComputed:
  title: "{{ item.camera.label }} Archive for {{ item.images[0].image.LastModified | date('MMMM yyyy') }}"
  epoch: "{{ item.images[0].image.LastModified | date('MMMM yyyy') }}"
---

<h1>{{ item.camera.label }} Archive for {{ epoch }}</h1>
  <div class="grid">
{% for image in item.images %}

    <article>
  
  <h2><a href="/{{ item.camera.id }}/{{ image.image.LastModified | date("yyyy/MM/dd") }}/">{{ image.image.LastModified | date("dd") }}</a></h2>
  <a href="/{{ item.camera.id }}/{{ image.image.LastModified | date("yyyy/MM/dd") }}/">
  <img src="{{ site.image_cdn }}{{ image.image.Key }}" alt="Image from {{ image.image.LastModified | date("yyyy/MM/dd") }} for {{ item.camera.label }}" class="thumb thumb-sml">
  </a>
    </article>
{% endfor %}

</div>

<div class="container-fluid">
  {% include "pagination.njk" %}
</div>